<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="bizdom_pillar_multi_company_rule" model="ir.rule">
            <field name="name">Bizdom Pillar: multi-company rule</field>
            <field name="model_id" ref="model_bizdom_pillar"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="bizdom_score_multi_company_rule" model="ir.rule">
            <field name="name">Bizdom Score: multi-company rule</field>
            <field name="model_id" ref="model_bizdom_score"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>

