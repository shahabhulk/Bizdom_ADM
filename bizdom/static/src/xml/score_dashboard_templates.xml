<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="bizdom.ScoreDashboard" owl="1">
        <div class="container o_score_dashboard_container">
            <!-- Header with back button and dashboard title -->
            <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                <div class="d-flex align-items-center">
                    <button class="btn btn-link me-3" t-on-click="navigateBack">
                        <i class="fa fa-arrow-left me-1"></i> Back to Dashboard
                    </button>
                    <h2 class="mb-0" t-esc="state.scoreName + ' Dashboard'"/>
                </div>
                <div class="btn-group filter-group ms-auto">
                    <button type="button"
                            t-att-class="'btn btn-sm ' + (state.filterType === 'WTD' ? 'btn-primary text-white' : 'btn-outline-primary')"
                            t-att-disabled="state.loading"
                            t-on-click="() => this.switchFilter('WTD')">
                        WTD
                    </button>
                    <button type="button"
                            t-att-class="'btn btn-sm ' + (state.filterType === 'MTD' ? 'btn-primary text-white' : 'btn-outline-primary')"
                            t-att-disabled="state.loading"
                            t-on-click="() => this.switchFilter('MTD')">
                        MTD
                    </button>
                    <button type="button"
                            t-att-class="'btn btn-sm ' + (state.filterType === 'YTD' ? 'btn-primary text-white' : 'btn-outline-primary')"
                            t-att-disabled="state.loading"
                            t-on-click="() => this.switchFilter('YTD')">
                        YTD
                    </button>
                </div>
            </div>

            <!-- Main content -->
            <div>
                <!-- First row with two quadrants -->
                <div class="row mb-4">
                    <!-- Quadrant 1 -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-primary text-white">
                                <h5 class="card-title mb-0" t-esc="state.quadrants.q1.title"/>
                            </div>
                            <div class="card-body position-relative">
                                <t t-if="state.loading">
                                    <div class="chart-loading-overlay">
                                        <div class="spinner-container">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                            <p class="mt-3 text-muted">Loading chart data...</p>
                                        </div>
                                    </div>
                                </t>
                                <t t-if="state.quadrants.q1.data.length">
                                    <div class="chart-container" t-att-class="state.loading ? 'chart-loading' : ''">
                                        <canvas t-ref="chartCanvas"></canvas>
                                    </div>
                                </t>
                                <t t-if="!state.quadrants.q1.data.length and !state.loading">
                                    <div class="text-muted text-center p-4">No data available</div>
                                </t>
                            </div>
                        </div>
                    </div>
                    <!-- Quadrant 2 -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-success text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0" t-esc="state.quadrants.q2.title"/>
                                    <small class="text-white-50" t-esc="state.departmentChartLabel"/>
                                </div>
                            </div>
                            <div class="card-body">
                                <t t-if="state.departmentDataLoading or state.departmentError or !state.departmentChartData">
                                    <div class="text-muted text-center p-4">
                                        <t t-esc="getDepartmentPlaceholderMessage()"/>
                                    </div>
                                </t>
                                <t t-if="state.departmentChartData">
                                    <div class="chart-container">
                                        <canvas t-ref="departmentChartCanvas"></canvas>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Second row with two more quadrants -->
                <div class="row">
                    <!-- Quadrant 3 -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-warning text-dark">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">
                                        <t t-if="isLabourScore()">Employee Labour</t>
                                        <t t-if="isLeadsScore()">Leads by Source</t>
                                        <t t-if="isConversionScore()">Conversions by Salesperson</t>
                                        <t t-if="!isLabourScore() and !isLeadsScore() and !isConversionScore()" t-esc="state.quadrants.q3.title"/>
                                    </h5>
                                    <t t-if="isLabourScore() or isLeadsScore() or isConversionScore()">
                                        <small class="text-dark-50" t-esc="state.employeeChartLabel"/>
                                    </t>
                                </div>
                            </div>
                            <div class="card-body">
                                <t t-if="isLabourScore()">
                                    <t t-if="state.employeeDataLoading or state.employeeError or !state.employeeChartData">
                                        <div class="text-muted text-center p-4">
                                            <t t-esc="getEmployeePlaceholderMessage()"/>
                                        </div>
                                    </t>
                                    <t t-if="state.employeeChartData">
                                        <div class="chart-container">
                                            <canvas t-ref="employeeChartCanvas"></canvas>
                                        </div>
                                    </t>
                                </t>
                                <t t-if="isLeadsScore()">
                                    <t t-if="state.employeeDataLoading or state.employeeError or !state.employeeChartData">
                                        <div class="text-muted text-center p-4">
                                            <t t-esc="getEmployeePlaceholderMessage()"/>
                                        </div>
                                    </t>
                                    <t t-if="state.employeeChartData">
                                        <div class="chart-container">
                                            <canvas t-ref="employeeChartCanvas"></canvas>
                                        </div>
                                    </t>
                                </t>
                                <t t-if="isConversionScore()">
                                    <t t-if="state.employeeDataLoading or state.employeeError or !state.employeeChartData">
                                        <div class="text-muted text-center p-4">
                                            <t t-esc="getEmployeePlaceholderMessage()"/>
                                        </div>
                                    </t>
                                    <t t-if="state.employeeChartData">
                                        <div class="chart-container">
                                            <canvas t-ref="employeeChartCanvas"></canvas>
                                        </div>
                                    </t>
                                </t>
                                <t t-if="!isLabourScore() and !isLeadsScore() and !isConversionScore()">
                                    <t t-foreach="state.quadrants.q3.data" t-as="item" t-key="item.id">
                                        <div class="mb-2">
                                            <span t-esc="item.label"/>: <span t-esc="item.value"/>
                                        </div>
                                    </t>
                                    <t t-if="!state.quadrants.q3.data.length">
                                        <div class="text-muted">No data available</div>
                                    </t>
                                </t>
                            </div>
                        </div>
                    </div>
                    <!-- Quadrant 4 -->
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-header bg-danger text-white">
                                <h5 class="card-title mb-0" t-esc="state.quadrants.q4.title"/>
                            </div>
                            <div class="card-body">
                                <t t-foreach="state.quadrants.q4.data" t-as="item" t-key="item.id">
                                    <div class="mb-2">
                                        <span t-esc="item.label"/>: <span t-esc="item.value"/>
                                    </div>
                                </t>
                                <t t-if="!state.quadrants.q4.data.length">
                                    <div class="text-muted">No data available</div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <style>
            /* Ensure the dashboard container allows scrolling */
            .container {
                min-height: 100%;
                padding-bottom: 2rem;
                overflow-y: visible;
            }
            
            /* Ensure parent containers allow scrolling - target Odoo's content area */
            :host {
                display: block;
                height: auto !important;
                min-height: 100%;
                overflow-y: auto !important;
            }
            
            .chart-container {
                position: relative;
                height: 300px;
                width: 100%;
                padding: 10px;
                transition: opacity 0.3s ease, filter 0.3s ease;
            }
            .chart-container-small {
                position: relative;
                height: 280px;
                width: 100%;
                padding: 5px;
                transition: opacity 0.3s ease, filter 0.3s ease;
            }
            .chart-container.chart-loading {
                opacity: 0.5;
                filter: blur(2px);
                pointer-events: none;
            }
            .chart-loading-overlay {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: rgba(255, 255, 255, 0.9);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 10;
                border-radius: 0.375rem;
                animation: fadeIn 0.3s ease-in;
            }
            .spinner-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }
            .spinner-container .spinner-border {
                width: 3rem;
                height: 3rem;
                border-width: 0.3rem;
            }
            .filter-group .btn {
                min-width: 70px;
                text-transform: uppercase;
                transition: all 0.2s ease;
            }
            .filter-group .btn:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }
            @keyframes fadeIn {
                from {
                    opacity: 0;
                }
                to {
                    opacity: 1;
                }
            }
        </style>
    </t>
</templates>