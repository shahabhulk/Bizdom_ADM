<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_move_line_labour_charge_list" model="ir.ui.view">
        <field name="name">account.move.line.labour.charge.list</field>
        <field name="model">labour.billing</field>
        <field name="arch" type="xml">
            <list>
                <field name="invoice_number"/>
                <field name="date"/>
                <field name="car_number"/>
                <field name="service_description"/>
                <field name="department_id"/>
                <field name="employee_name"/>
                <field name="charge_amount"/>
                <!--                <field name="invoice_line_id"/>-->
                <!--                <field name="name"/>-->
                <!-- or labour_charges if you're using a custom field -->
            </list>
        </field>
    </record>


    <record id="action_labour_billing" model="ir.actions.act_window">
        <field name="name">Labour Billing</field>
        <field name="res_model">labour.billing</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_labour_billing" name="Labour Charges Data" parent="menu_bizdom_data" action="action_labour_billing"/>
</odoo>