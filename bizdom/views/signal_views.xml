<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_bizdom_signal_tree" model="ir.ui.view">
        <field name="name">bizdom.signal.tree</field>
        <field name="model">bizdom.signal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_bizdom_signal_form" model="ir.ui.view">
        <field name="name">bizdom.signal.form</field>
        <field name="model">bizdom.signal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

z

    <!-- Action and menuitem example -->
    <record id="action_bizdom_signal" model="ir.actions.act_window">
        <field name="name">Signals</field>
        <field name="res_model">bizdom.signal</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_bizdom_signal" name="Signals" parent="menu_bizdom_root" action="action_bizdom_signal"/>
</odoo>